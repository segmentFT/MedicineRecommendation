<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#E2FFFFFF">

    <TextView
        android:id="@+id/diseaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISEASE"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#6588E121" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/possibilityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可能性: "
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/possibilityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERCENTAGE"
            android:layout_toRightOf="@id/possibilityLabel"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/possibilityValue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="#C1C0C0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/possibilityValue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" >

            <View
                android:id="@+id/possibilityProgressbar"
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:background="#2196F3" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>