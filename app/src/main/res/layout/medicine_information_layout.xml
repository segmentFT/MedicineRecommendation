<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="药品的中药成份:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#A3B4E67B" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicineIngredientList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#57CBE8AB"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noMessageText6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="没有药物的成份信息"
        android:gravity="center_horizontal|center_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#B57FCA2A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相似的药品推荐:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#A3B4E67B" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendationList"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#57CBE8AB"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noMessageText7"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="没有相似的药品信息"
        android:gravity="center_horizontal|center_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="#B57FCA2A" />

</LinearLayout>