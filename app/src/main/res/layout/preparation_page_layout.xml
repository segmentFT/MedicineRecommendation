<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/messageText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="#56CFF3A5"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="TEST"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/installingProgressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:textSize="16sp"
        android:layout_below="@id/messageText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#56CFF3A5" />

    <View
        android:layout_width="320dp"
        android:layout_height="10dp"
        android:layout_below="@id/installingProgressValue"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:background="#C1BDBD" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="10dp"
        android:layout_below="@id/installingProgressValue"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp" >

        <View
            android:id="@+id/installingProgressbar"
            android:layout_width="320dp"
            android:layout_height="10dp"
            android:background="#2196F3" />

    </LinearLayout>

    <Button
        android:id="@+id/finishInstallingButton"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_background1"
        android:enabled="false"
        android:text="进入疾病查询界面"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>